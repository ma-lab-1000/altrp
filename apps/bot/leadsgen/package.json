{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Altrp telegram bot",
  "type": "commonjs",
  "main": "src/worker/worker.ts",
  "scripts": {
    "build:worker": "tsc -p tsconfig.worker.json",
    "build:nodejs": "tsc -p tsconfig.nodejs.json",
    "generate-flows-index": "node scripts/generate-flows-index.cjs",
    "dev": "npm run generate-flows-index && wrangler dev",
    "dev:nodejs": "npm run generate-flows-index && node src/nodejs/server.mjs",
    "start": "node src/nodejs/server.mjs",
    "start:worker": "npm run generate-flows-index && wrangler dev",
    "start:nodejs": "npm run generate-flows-index && node src/nodejs/server.mjs",
    "deploy": "npm run generate-flows-index && wrangler deploy",
    "deploy:dev": "npm run generate-flows-index && wrangler deploy --env development",
    "deploy:prod": "npm run generate-flows-index && wrangler deploy --env production",
    "d1:create": "wrangler d1 create altrp-db",
    "d1:migrate": "wrangler d1 migrations apply altrp-db",
    "d1:local": "wrangler d1 execute altrp-db --local --file=./schema.sql",
    "d1:remote": "wrangler d1 execute altrp-db --file=./schema.sql",
    "migrate:postgres": "node scripts/migrate-postgres.mjs"
  },
  "keywords": [
    "telegram",
    "bot",
    "cloudflare",
    "workers",
    "d1",
    "nodejs",
    "postgresql",
    "redis"
  ],
  "author": "Altrp",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.19.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "node-cron": "^3.0.0",
    "dotenv": "^16.0.0"
  }
}
